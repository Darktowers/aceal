@import "nib"
@import "nib/vendor"
body
	font-family: 'Roboto', sans-serif;
	color: #455A64;
.container-abso
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;
	position: absolute;
	width: 100%;
	background: #FAFAFA;
	flex-direction: column;
	padding: 1em;
	h1
		font-weight: lighter
		text-align: center
	img
		margin: 0

	.container-card
		background: white;
		padding: 2em;
		max-width: 600px;
		width: 100%;
		box-shadow: 0px 2px 10px 0px #ccc;
		min-height: 500px;
		display: flex;
		justify-content: space-around;
		align-items: center;
		flex-direction: column;
		table
			border: 1px solid #ccc;
			th
				background: #2196F3;
				color: white;
				padding: 1em
			tr
				border-bottom: 1px solid #ddd;	
				&:nth-child(even)
					background: #F5F5F5
			td
				padding: 1em

		.button-cont
			display: flex
			flex-wrap: wrap;
			justify-content: center;
		.logos
			display: flex;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
			img
				width: 128px;
.btn-normal
	padding: 1em;
	color: white !important
	min-width: 138px;
	text-align: center;
	margin: .5em;
	border-radius: 3px;
	cursor: pointer;
	border 0
.b_azul
	background: #1976D2;
	transition: all .3s ease-in-out
	&:hover
		background: #0077b5;
.b_azul_claro
	background: #03A9F4;
	transition: all .3s ease-in-out
	&:hover
		background: #3f729b;
.modal-co
	display: none
.modal-form
	position: fixed;
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	background: rgba(69, 90, 100, 0.35);
	top: 0;
	left: 0;
	.form-cont
		max-width: 500px;
		width: 100%;
		position: relative
		display: none
		.close
			position: absolute;
			right: 0;
			font-size: 1.4em;
			padding: .3em;
			cursor: pointer
	.form
		background: white;
		padding: 1em;
		min-height: 300px;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		h2
			font-weight: lighter;
			font-size: 40px;
			margin-bottom: 0;
		input[type=text]
		input[type=email]
		input[type=password]
			padding: .8em 1em;
			font-weight: lighter;
			margin: 1em 0;
		input[type=submit]
			width: 47%;
.form
	background: white;
	padding: 1em;
	min-height: 300px;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	h5
		margin: 0
	input[type=text]
	input[type=email]
	input[type=password]
	select
	textarea
		resize: none
		padding: .8em 1em;
		font-weight: lighter;
		margin: 1em 0;
	input[type=submit]
		width: 47%;
.wrap
	display: flex
.buttons
	display: flex
	justify-content: center
	align-items: center